<div class="index-container">
  <h1><%= @list.name %> (<%= @list.movies.count %>)</h1>

    <div class="flex-container">
      <% @list.movies.each do |movie| %>
        <div class="card">
          <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
          <img src="<%= movie.poster_url %>" alt="poster for <%= movie.title %>">
          <h2><%= movie.title %></h2>
          <h3><%= movie.rating %> <% if movie.rating > 65 %><i class="fa-solid fa-thumbs-up"></i><% else %><i class="fa-solid fa-thumbs-down"></i><% end %></h3>
          <p><%= bookmark.comment %></p>
          <%= link_to "Remove from list", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
        </div>
      <% end %>
    </div>

    <%= link_to "Back to Lists", lists_path %>
    <%= link_to "Add a movie", new_list_bookmark_path(@list) %>
</div>

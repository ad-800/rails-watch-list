<div class="index-container">
  <h1>All Lists (<%= List.count %>)</h1>

    <div class="container text-center">
      <div class="row">
        <% @lists.each do |list| %>
          <%= link_to list_path(list) do %>
          <div class="card col-4 col-sm-2">
            <h2><%= list.name %></h2>
          </div>
          <% end %>
        <% end %>
      </div>
    </div>
</div>
